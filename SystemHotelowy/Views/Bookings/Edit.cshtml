@model SystemHotelowy.Models.Booking

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="VisitorId" />
            <input type="hidden" asp-for="ReservationDate" />
            <input type="hidden" asp-for="ReceptionistId" />
            <input type="hidden" asp-for="StatusId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <input asp-for="RoomId" class="form-control" />
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Guest Name</label>
                <p class="form-control">
                    @Model.Visitor?.FirstName @Model.Visitor?.LastName
                </p>
            </div>
            <div class="form-group">
                <label asp-for="StartReservation" class="control-label"></label>
                <input asp-for="StartReservation" class="form-control" />
                <span asp-validation-for="StartReservation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndReservation" class="control-label"></label>
                <input asp-for="EndReservation" class="form-control" />
                <span asp-validation-for="EndReservation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Date of reservation</label>
                <p class="form-control">
                    @Model.ReservationDate.ToString("dd.MM.yyyy")
                </p>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control"/>
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Status</label>
                <p class="form-control">
                    @Model.Status.Name
                </p>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
