@model SystemHotelowy.Models.Booking

@{
    ViewData["Title"] = "Details";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<h1>Details</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VisitorId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VisitorId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartReservation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartReservation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndReservation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndReservation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
