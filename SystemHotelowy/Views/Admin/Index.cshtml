@model IEnumerable<SystemHotelowy.Models.UserRolesViewModel>
@{
    ViewData["Title"] = "Panel Administratora - Zarządzanie Użytkownikami";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Current Role</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.User.FirstName @item.User.LastName</td>
                            <td>@item.User.Email</td>
                            <td>
                                @if (item.Roles.Any())
                                {
                                    @foreach (var role in item.Roles)
                                    {
                                        <span class="badge bg-info text-dark">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Brak ról</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <form asp-controller="Admin" asp-action="GiveRoleReceptionist" method="post">
                                        <input type="hidden" name="userId" value="@item.User.Id" />
                                        <button type="submit" class="btn btn-warning btn-sm">Nadaj: Receptionist</button>
                                    </form>

                                    <form asp-controller="Admin" asp-action="GiveRoleAdmin" method="post">
                                        <input type="hidden" name="userId" value="@item.User.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Nadaj: Admin</button>
                                    </form>

                                    <form asp-controller="Admin" asp-action="RemoveRole" method="post">
                                        <input type="hidden" name="userId" value="@item.User.Id" />
                                        <button type="submit" class="btn btn-outline-secondary btn-sm">Usuń uprawnienia</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>